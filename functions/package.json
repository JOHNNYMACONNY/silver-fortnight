{
  "name": "functions",
  "version": "1.0.0",
  "main": "lib/index.js",
  "engines": {
    "node": "18 || 20 || 22"
  },
  "scripts": {
    "build": "mkdir -p lib && tsc",
    "build:fast": "mkdir -p lib && tsc --incremental",
    "build:watch": "mkdir -p lib && tsc --build --watch",
    "clean": "rm -rf lib",
    "postinstall": "npm run build",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run clean && npm run build && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "typescript": "^5.8.3"
  }
}
